{
    "compilerOptions": {
        "allowJs": false,
        "module": "commonjs",
        "target": "esnext",
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "listEmittedFiles": true,
        "resolveJsonModule": true,
        "baseUrl": "./src/",
        "outDir": "dist/",
        "noEmit": true,
        "paths": {
            "@test/*": ["../test/*"]
        }
    },
    "exclude": ["node_modules"]
}
