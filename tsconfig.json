{
    "compilerOptions": {
        "allowJs": false,
        "module": "commonjs",
        "target": "esnext",
        "sourceMap": true,
        "moduleResolution": "node",
        "outDir": "dist/",
        "noImplicitAny": true,
        "strictNullChecks": true,
        "baseUrl": "./src",
        "listEmittedFiles": true,
        "resolveJsonModule": true
    },
    "exclude": ["node_modules", "test", "e2e", "src/**/*.unit.ts"]
}
